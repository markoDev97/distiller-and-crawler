<div class="component">
    <div>
        <h3>Choose distillation approach</h3>
        <form asp-page="Index" asp-page-handler="WhichApproach">
            <div>
                <select name="whichApproach">
                    <option value="DistillFileInput">File</option>
                    <option value="DistillPageFromURI">URI</option>
                    <option value="DistillRawText">Raw input</option>
                </select>
            </div>
            <button type="submit" class="btn btn-info" style="margin-top: 3px">How would to like to distill RDF data?</button>
        </form>
    </div>
</div>